<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/countryCode"
        android:layout_width="347dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="DE"
        android:text="DE"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getDelay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/dishwasher"
        android:onClick="getDelayClicked"
        app:layout_constraintTop_toBottomOf="@+id/countryCode"
        tools:layout_editor_absoluteX="9dp" />

    <EditText
        android:id="@+id/maximumDelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="Max Delay (hrs)"
        android:inputType="number"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="599dp" />

    <TextView
        android:id="@+id/suggestedDelay"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/countryCode"
        tools:layout_editor_absoluteX="151dp" />

    <SeekBar
        android:id="@+id/maxDelaySeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="190dp"
        android:layout_height="18dp"
        android:max="24"
        android:progress="24"
        app:layout_constraintBottom_toTopOf="@+id/suggestedDelay"
        tools:layout_editor_absoluteX="136dp" />

</android.support.constraint.ConstraintLayout>